class Solution:
    def detectCapitalUse(self, word: str) -> bool:
        if word.isupper() or word.islower():
            return True
        elif word[0].isupper() and word[1:].islower():
            return True

class Solution:
    def detectCapitalUse(self, word: str) -> bool:
        if word.isupper() or word.istitle() or word.islower(): #The istitle() method returns True if all words in a text start with a upper case letter, AND the rest of the word are lower case letters, otherwise False.
            return True
        else:
            return False
        
