# my solution
class Solution:
    def findLUSlength(self, a: str, b: str) -> int:
        if a == b:
            return -1
        elif a != b and len(a) == len(b):
            return len(a)
        elif a != b and len(a) != len(b):
            return max(len(a), len(b))

# can simply code like this:
class Solution:
    def findLUSlength(self, a: str, b: str) -> int:
        if a==b:
            return -1
        else:
            return max(len(a),len(b))
