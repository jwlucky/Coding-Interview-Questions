# My Solution:
class Solution:
    def distinctIntegers(self, n: int) -> int:
        nums = [num for num in range(2, n)]
        board = [n]
        day = 1

        for num in nums:
            if n % num == 1:
                board.append(num)
                day += 1
                nums.remove(num)

        for ber in board:
            for num in nums:
                if ber % num == 1:
                    board.append(num)
                    day += 1
                    nums.remove(num)
                   
        if len(nums) == 0:
            return len(set(board))
# Other Solutions I like:
# Solution 1:

class Solution:
    def distinctIntegers(self, n: int) -> int:
        if n == 1:
            return 1
        return n - 1

# Solution 2:
class Solution:
    def distinctIntegers(self, n: int) -> int:
        return max(1, n-1)
            
